{
  "name": "monocrate",
  "version": "0.2.0",
  "description": "From monorepo to npm in one command",
  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "bin": {
    "monocrate": "./dist/src/main.js"
  },
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    }
  },
  "files": [
    "dist/src",
    "!dist/src/**/*.compilation-test.*"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "publish-to-npm": "./scripts/publish-to-npm.sh"
  },
  "keywords": [
    "monorepo",
    "npm",
    "bundler",
    "package",
    "publish"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imaman/monocrate.git"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^20.19.29",
    "@types/yargs": "^17.0.35",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "^9.0.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "get-port": "^7.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.0.0",
    "verdaccio": "^6.2.4",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "esbuild": "^0.24.0",
    "resolve.exports": "^2.0.3",
    "tinyexec": "^1.0.2",
    "tinyglobby": "^0.2.15",
    "ts-morph": "^27.0.2",
    "yaml": "^2.8.2",
    "yargs": "^18.0.0",
    "zod": "^4.3.5"
  }
}
